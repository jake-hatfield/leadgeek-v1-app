{
	"engines": {
		"node": ">=14"
	},
	"name": "leadgeek-app-server",
	"version": "1.0.0",
	"description": "The web application for LeadGeek's arbitrage sourcing service.",
	"main": "server.js",
	"scripts": {
		"install": "cd client && npm install",
		"start": "node -r dotenv/config server",
		"server": "nodemon server",
		"client": "npm start --prefix client",
		"dev": "dotenv -e .env.development concurrently \"npm run server\" \"npm run client\"",
		"build": "cd client && npm run build",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
	},
	"author": "Jake Hatfield",
	"license": "(ISC) See license in LICENSE.md",
	"dependencies": {
		"@sentry/react": "^6.11.0",
		"@sentry/tracing": "^6.11.0",
		"bcryptjs": "^2.4.3",
		"dotenv": "^8.6.0",
		"dotenv-cli": "^4.0.0",
		"express": "^4.17.1",
		"express-validator": "^6.12.1",
		"google-spreadsheet": "^3.1.15",
		"jsonwebtoken": "^8.5.1",
		"luxon": "^2.0.2",
		"mongoose": "^5.13.8",
		"mongoose-fuzzy-searching": "^2.0.2",
		"nodemailer": "^6.6.3",
		"stripe": "^8.170.0"
	},
	"devDependencies": {
		"@types/luxon": "^2.0.0",
		"@types/react-router-dom": "^5.1.8",
		"concurrently": "^5.3.0",
		"craco-alias": "^3.0.1",
		"nodemon": "^2.0.12"
	}
}
