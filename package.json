{
	"engines": {
		"node": ">=14"
	},
	"name": "leadgeek-app-server",
	"version": "1.0.0",
	"description": "The web application for LeadGeek's arbitrage sourcing service.",
	"main": "src/server.ts",
	"scripts": {
		"install": "cd client && npm install",
		"start": "ts-node -r tsconfig-paths/register src/server.ts",
		"server": "nodemon -e ts,js --exec ts-node --files -r tsconfig-paths/register src/server.ts --ignore-client",
		"client": "npm start -C client",
		"dev": "dotenv -e .env.development concurrently \"npm run server\" \"npm run client\"",
		"build": "cd client && npm run build",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install -C client && npm run build --prefix client"
	},
	"author": "Jake Hatfield",
	"license": "(ISC) See license in LICENSE.md",
	"dependencies": {
		"@sentry/node": "^6.11.0",
		"@sentry/tracing": "^6.11.0",
		"bcryptjs": "^2.4.3",
		"dotenv-cli": "^4.0.0",
		"express": "^4.17.1",
		"express-validator": "^6.12.1",
		"google-spreadsheet": "^3.1.15",
		"jsonwebtoken": "^8.5.1",
		"luxon": "^2.0.2",
		"mongoose": "^5.12.0",
		"mongoose-fuzzy-search": "0.0.4",
		"mongoose-fuzzy-searching": "^2.0.2",
		"nodemailer": "^6.6.3",
		"react-hotkeys-hook": "^3.4.0",
		"stripe": "^8.171.0"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.13",
		"@types/google-spreadsheet": "^3.1.5",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/luxon": "^2.0.3",
		"@types/mongoose": "^5.11.97",
		"@types/node": "^16.9.1",
		"@types/nodemailer": "^6.4.4",
		"@types/react-csv": "^1.1.2",
		"@types/react-image-magnify": "^2.7.1",
		"@types/react-select": "^4.0.17",
		"concurrently": "^5.3.0",
		"nodemon": "^2.0.12",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"tslint": "^6.1.3",
		"typescript": "^4.4.3"
	}
}
