{
	"engines": {
		"node": ">=14"
	},
	"name": "leadgeek-app-server",
	"version": "1.0.0",
	"description": "The web application for LeadGeek's arbitrage sourcing service.",
	"main": "server.js",
	"scripts": {
		"build": "cd client && npm run build",
		"install": "cd client && npm install",
		"start": "node -r dotenv/config server",
		"server": "nodemon server",
		"client": "npm start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
	},
	"author": "Jake Hatfield",
	"license": "(ISC) See license in LICENSE.md",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"config": "^3.3.6",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-validator": "^6.10.0",
		"google-spreadsheet": "^3.1.15",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.0",
		"mongoose-fuzzy-searching": "^2.0.2",
		"nodemailer": "^6.5.0",
		"stripe": "^8.138.0"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"nodemon": "^2.0.7"
	}
}
