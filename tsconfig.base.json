{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "dist",
		"baseUrl": "./src/",
		"paths": {
			"@config/*": ["./config/*"],
			"@middleware/*": ["./middleware/*"],
			"@models/*": ["./models/*"],
			"@routes/*": ["./routes/*"],
			"@types/*": ["./types/*"]
		},
		"typeRoots": ["./src/@types", "./node_modules/@types"]
	},
	"include": ["./src/**/*"]
}
